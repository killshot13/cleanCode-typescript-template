{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "TypeScript template with clean-coding rules enforced.",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon",
    "test": "npm run lint && npm run prettier-format",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier . --config .prettierrc --write",
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node build/index.js"
  },
  "keywords": [
    "typescript, template, eslint, prettier"
  ],
  "author": "killshot13",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^14.14.43",
    "eslint": "^7.27.0",
    "@types/node": "^14.17.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
